<p id="notice"><%= notice %></p>

<h1>Shippers</h1>

<table>
  <thead>
    <tr>
      <th>Shipper name</th>
      <th>Phone</th>
      <th>Orders</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shippers.each do |shipper| %>
      <tr>
        <td><%= shipper.shipper_name %></td>
        <td><%= shipper.phone %></td>
        <td><%= link_to "Orders", orders_path(field_name: :shipper_id, value: shipper.id) %></td>
        <td><%= link_to 'Show', shipper %></td>
        <td><%= link_to 'Edit', edit_shipper_path(shipper) %></td>
        <td><%= link_to 'Destroy', shipper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

