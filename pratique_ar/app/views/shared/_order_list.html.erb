<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Employee</th>
      <th>Details</th>
      <th>Shipper</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td style="font-weight:bold;"><%= order.order_date %></td>
        <td><%= link_to "#{order.customer_id}", customer_path(order.customer_id) %></td>
        <td><%= link_to "#{order.employee_id}", employee_path(order.employee_id) %></td>
        <td><%= link_to "Details", order_details_path(field_name: :order_id, value: order.id) %></td>
        <td><%= link_to "#{order.shipper_id}", shipper_path(order.shipper_id) %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Order', new_order_path %>
