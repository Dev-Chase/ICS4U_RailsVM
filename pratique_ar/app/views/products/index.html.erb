<p id="notice"><%= notice %></p>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Supplier</th>
      <th>Category</th>
      <th>Unit</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= link_to "#{product.supplier_id}", product_path(product.supplier_id) %></td>
        <td><%= link_to "#{product.category_id}", product_path(product.category_id) %></td>
        <td><%= product.unit %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
